# Optional: Set these here or configure via the web UI at /config
OAUTH_CLIENT_ID=your_client_id_here
OAUTH_CLIENT_SECRET=your_client_secret_here

# OAuth provider: github, google, microsoft, gitlab, linkedin, dropbox, discord
OAUTH_PROVIDER=github

# For Railway deployment, set this to your Railway URL
# Example: https://your-app-name.railway.app/callback
REDIRECT_URI=http://localhost:5000/callback

# Optional: Custom scope (leave empty for provider defaults)
OAUTH_SCOPE=

# API key for programmatic access to /api/token endpoint
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
OAUTH_PROXY_API_KEY=your_secure_api_key_here

# Flask secret key (auto-generated if not set)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your_secret_key_here

# Port (Railway sets this automatically)
PORT=5000

# Debug mode (set to False in production)
DEBUG=False
